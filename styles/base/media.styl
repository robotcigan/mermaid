@media(max-width 1200px)
  .grid--container
    width 96%

@media(max-width 768px)
  .about
    &__img
      display none
    &__text
      display block
      margin initial
      position initial
      height initial
      width initial

@media(max-width 767px)
  .hero
    // height initial
    &__header
      font-size 3rem
    &__subheader
      font-size 2.4rem
  .video
    height initial
    iframe
      max-height 20rem
  .about
    &__text
      padding 0
  .troupe
    &__item
      size(initial)
      padding 0
  .slider
    .slick-arrow
      background rgba($main, .1)
      opacity 1
  .team
    &__name
      font-size 1.8rem

@media(max-width 500px)
  .hero
    &__header
      font-size 2.4rem
      font-weight 600
    &__subheader
      font-size 1.8rem
    &__time
      font-size 2.4rem
  .btn
    font-size 1.4rem
    padding .6rem 1rem
  .slider
    img
      width 100%

@media(max-width 400px)
  .hero
    &__content
      text-align center